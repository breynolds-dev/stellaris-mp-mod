entity = {
	name = "tiberium_planet_01_entity"
	pdxmesh = "planet_clouded_mesh"
	
	meshsettings = {
	name = "planet_geosphereShape"
	texture_diffuse = "tiberium_01_green_diffuse.dds"
	texture_normal = "tiberium_01_normal.dds"
	texture_specular = "tiberium_01_spec.dds"
	}
	
	##cloud texture override
	meshsettings = {
	name = "clouds_geosphereShape"
	texture_diffuse = "tiberium_clouds_green_diffuse.dds"
	texture_normal = "tiberium_clouds_normal.dds"
	texture_specular = "tiberium_clouds_specular.dds"
	}
	
	##cloud shadow texture override
	meshsettings = {
	name = "clouds_shadow_geosphereShape"
	texture_diffuse = "tiberium_cloud_shadow_diffuse.dds"
	texture_normal = "nonormal.dds"
	texture_specular = "nospec.dds"
	}
	
	default_state = "idle"	
	state = { name = "idle" animation = "idle" time_offset = { 0 100 } 
		start_event = { trigger_once = yes sound = { soundeffect = "amb_planet_class" } }
	}
}

